<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Vacancy Links</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <style>
        .effect1 {
            -webkit-box-shadow: 0 10px 6px -6px #777;
            -moz-box-shadow: 0 10px 6px -6px #777;
            box-shadow: 0 10px 6px -6px #777;
        }
    </style>
</head>
<body style="font-family: 'Oswald', sans-serif;">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Vacancy Links", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("About us", "Index", "Home")</li>
                    <li>@Html.ActionLink("How it works", "Index", "Home")</li>
                    <li>@Html.ActionLink("Find your job ", "Vacancies", "vacancies")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Privacy & Policy", "Pnp", "Home")</li>
                    <li>@Html.ActionLink("Terms & Conditions", "Tnc", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>

    <div class="container" style="background-color:black;width:100%">
        <br><br>
        <div class="row">
            <div class="col-md-4">
                <div class="panel" style="background-color:black;margin-left:100px;margin-top:0px">
                    <div class="data" style="color: gray;">
                        <h2>Vacancy Links</h2>
                        <br />
                        <p>
                            We are always beside you to help you to find your dream jobs.
                        </p>
                        <br />
                        <p> Our Team</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel" style="background-color:black;margin-left:100px;margin-top:0px">
                    <div class="data" style="color:gray">
                        <h2>Contact Us</h2>
                        <br />
                        <p>
                            <i class="fa fa-phone"></i> +95969786376
                            <br /><br />
                            <i class="far fa-envelope"></i> &nbsp;aungkaungkhent@gmail.com
                            <br /><br />
                            <i class="fas fa-location-arrow"></i> No.289(A), Pyay Road,Yangon,Myanmar.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel" style="background-color:black;margin-left:100px;margin-top:0px">
                    <div class="data">
                        <h2 style="color:gray">Quick Links</h2>
                        <ul style="text-decoration: none;">
                            <li>@Html.ActionLink("Home", "Index", "Home", new { @style = "color:gray;" })</li>
                            <li>@Html.ActionLink("About us", "Index", "Home", new { @style = "color:gray;" })</li>
                            <li>@Html.ActionLink("How it works", "Index", "Home", new { @style = "color:gray;" })</li>
                            <li>@Html.ActionLink("Find your job ", "Vacancies", "vacancies", new { @style = "color:gray;" })</li>
                            <li>@Html.ActionLink("Privacy & Policy", "Pnp", "Home", new { @style = "color:gray;" })</li>
                            <li>@Html.ActionLink("Terms & Conditions", "Tnc", "Home", new { @style = "color:gray;" })</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <br><br>
    </div>
    <footer style="margin-top:20px">
        <p class="text-center">&copy; 2018 - Vacancy Links</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>