    <title>@ViewBag.Title - Vacancy Links</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <style>
        .effect1 {
            -webkit-box-shadow: 0 10px 6px -6px #777;
            -moz-box-shadow: 0 10px 6px -6px #777;
            box-shadow: 0 10px 6px -6px #777;
        }
    </style>
    <script>
        window.fbAsyncInit = function () {
            FB.init({
                appId: '247603365953139',
                xfbml: true,
                version: 'v3.1'
            });
        };

        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) { return; }
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));

        function login_app() {
            FB.logout(function (response) {
                console.log("logged out");
            });
            FB.login(function (response) {
                if (response.status === 'connected') {
                        FB.api('/me?fields=id,name,email', profile => {
                            console.log(profile);
                            alert(profile['name'] + ", you have successfully applied the job vacancy.");
                            alert("Stay tune with your Email inbox");
                            var data = profile['email'];
                            $("#email").html("" + data);
                            location.reload();
                            //$("#vid11").html("" + data);
                        });
                } else {
                    console.log("not logged in");
                }
            }, { scope: 'email' });
        }
    </script>
</head>
