@model VLinks.vacancy
@{
    /**/
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var latitude = @Model.lat;
    var longitude = @Model.lng;
}
<style>
    #map {
        width: 100%;
        height: 350px;
    }
</style>
<div class="container">
    <div class="row" style="border-bottom:3px solid black">
        <div class="col-md-12" style="margin-top:30px"><h2>Job Details</h2></div>
    </div>
    <div class="row text-left" style="margin-top:40px">
        <div class="col-md-6">
            <table style="width:100%;font-size:18px;">
                <tr>
                    <td style="width:50%;padding:10px">@Html.Label("Job Title")</td>
                    <td style="width:50%;padding:10px">@Html.DisplayFor(model => model.j_title)</td>
                </tr>
                <tr>
                    <td style="width:50%;padding:10px">@Html.Label("Job Location")</td>
                    <td style="width:50%;padding:10px">@Html.DisplayFor(model => model.location)</td>
                </tr>
                <tr>
                    <td style="width:50%;padding:10px">@Html.Label("Payment")</td>
                    <td style="width:50%;padding:10px">@Html.DisplayFor(model => model.salary)</td>
                </tr>
                <tr>
                    <td style="width:50%;padding:10px">@Html.Label("Working Day")</td>
                    <td style="width:50%;padding:10px">@Html.DisplayFor(model => model.workingday)</td>
                </tr>
                <tr>
                    <td style="width:50%;padding:10px">@Html.Label("Working Time")</td>
                    <td style="width:50%;padding:10px">@Html.DisplayFor(model => model.workingtime)</td>
                </tr>
                <tr>
                    <td style="width:50%;padding:10px">@Html.Label("Expired Date")</td>
                    <td style="width:50%;padding:10px">@Html.DisplayFor(model => model.vexpireddate)</td>
                </tr>
                <tr>
                    <td style="width:50%;padding:10px">@Html.Label("Description")</td>
                    <td style="width:50%;padding:10px">@Html.DisplayFor(model => model.vdescription)</td>
                </tr>
                <tr>
                    <td class="text-left" style="width:50%;padding:10px">
                        <br />
                        <br />
                    </td>
                    <td class="text-right" style="width:50%;padding:10px">                        
                        <input style="font-size:16px" class="btn btn-primary" type="button" value="Apply" onclick="login_app()" />
                        <br />
                    </td>
                </tr>
            </table>
            <br /><br /><br />
        </div>
        <div class="col-md-6 text-center">
            <div id="map"></div>
            <br /><br /><br />
        </div>
    </div>
</div>
<script>
    function initMap() {
            var latitude = Number(@latitude);
            var longitude = Number(@longitude);
            var uluru = { lat: latitude, lng: longitude};
            var mapProp = {
                center: uluru,
                zoom: 10,
                mapTypeId: google.maps.MapTypeId.hybrid
            };
            map = new google.maps.Map(document.getElementById('map'), mapProp);
            var marker = new google.maps.Marker({ position: uluru, map: map });
    }         
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCfQYMDZmPiwX39MM3jHU5IPj5FmAU23gE&callback=initMap"></script>